<body>
    <div class="umContainer" id="blur">
    <div class="titleUM">
        <h1>User Management</h1>
    </div>

    <div class="search-add">
        <div class="input-SD">
          <input class="search-form" type="text" placeholder="Search" aria-label="Search">
            <button type="button" class="btn-add"><i class="fa fa-plus"></i> Add User</button>
        </div>
    </div>  

    <div class="container-lg">
        <div class="table-responsive">
            <div class="table-wrapper">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Username</th>
                            <th>Name</th>
                            <th>Role</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (sampleData.length === 0) { %>
                            <tr>
                                <td colspan="4">No data found</td>
                            </tr>
                        <% } else { %>
                            <% sampleData.forEach(function(data) { %>
                                <tr>
                                    <td><%= data.username %></td>
                                    <td><%= data.fname + ' ' + data.lname %></td>
                                    <td><%= data.role %></td>
                                    <td><%= data.status %></td>
                                    <td>
                                        <a class="add" title="Add" data-toggle="tooltip"><i class="material-icons">&#xE03B;</i></a>
                                        <a class="edit" title="Edit" data-toggle="tooltip"><i class="material-icons">&#xE254;</i></a>
                                        <a class="delete" title="Delete" data-toggle="tooltip"><i class="material-icons">&#xE872;</i></a>
                                    </td>
                                </tr>
                            <% }); %>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    </div>  

    <div id="popup">
        <div class="close-btn" onclick="togglePopup()">&times;</div>
        <div class="registration-box">
            <div>
                <input type="text" class="first_name" required="required">
                <label for="first_name">First Name</label>
            </div>

            <div>
                <input type="text" class="last_name" required="required">
                <label for="last_name">Last Name</label>
            </div>

            <div>
                <input type="text" class="username" required="required">
                <label for="username">Username</label>
            </div>

            <div>
                <input type="text" class="password" required="required">
                <label for="password">Password</label>
            </div>

            <!-- ito drop done arrow ang gagawin -->
            <div>
                <input type="text" class="role" required="required">
                <label for="role">Role</label>
            </div>
            <button class="btnSave">Save</button>
        </div>
    <!-- <button class="btn-add" onlclick="togglePopup()"><i class="fa fa-plus"></i> Add User</button> -->
